/**index.wxss**/
swiper{
  height: 380rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.category{
  width:100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  border-left: 1px solid #eeeeee;
  border-top: 1px solid #eeeeee;
  background-color: #fff;
}
.items{
  display: flex;
   flex-direction: column;
   justify-content: center; 
   align-items: center;
   width: 33.33333%; 
    height:250rpx; 
    border-right: 1px solid #eeeeee;
    border-bottom: 1px solid #eeeeee;
    box-sizing: border-box;
}
 .items image{
  width:70rpx;
  height: 70rpx;
  margin-bottom: 15rpx;
}
.items text{
  font-size: 12px;
} 
.friend{
  width:100%;
  height:100%;
  display: flex;
  flex-wrap: wrap;
   justify-content: space-around; 
    margin-top:20rpx;  
    padding: 20rpx;  
   box-sizing: border-box;
   overflow: hidden;
   background-color: #fff;
}
.friend image{
  width:330rpx;
  height:185rpx;
}